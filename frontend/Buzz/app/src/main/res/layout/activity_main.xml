<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_ubcarelogo"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:scaleType="fitStart"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ubcare_logo" />

    <EditText
        android:id="@+id/et_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:hint="발화내용 테스트 입력"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintLeft_toRightOf="@+id/iv_ubcarelogo"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_mic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitStart"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ubcarelogo"
        app:srcCompat="@drawable/mic" />

    <TextView
        android:id="@+id/tv_mic_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:text="음성인식한 문장"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/iv_mic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ubcarelogo" />

    <ImageView
        android:id="@+id/iv_speak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitStart"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mic"
        app:srcCompat="@drawable/speak" />

    <TextView
        android:id="@+id/tv_speak_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:text="안녕하세요! 의사랑 음성인식 진료접수 및 대기환자확인 서비스입니다."
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:maxLines="4"
        android:scrollbars="vertical"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mic"
        app:layout_constraintLeft_toRightOf="@+id/iv_speak" />

    <TextView
        android:id="@+id/tv_dialogflow_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:text="이곳엔 dialogFlow 분석 결과가 표시됩니다."
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:maxLines="25"
        android:scrollbars="vertical"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/tv_speak_result" />

</androidx.constraintlayout.widget.ConstraintLayout>